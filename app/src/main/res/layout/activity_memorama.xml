<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondomemorama"
    tools:context=".MainActivity">

    <!-- Header con estadísticas mejorado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center"
        android:background="#CC293564"
        android:elevation="8dp"
        android:layout_marginBottom="15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:layout_marginEnd="8dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🎯"
                android:textSize="18sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvPares"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/8"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#1F3B75"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PARES"
                android:textSize="10sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="1dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:layout_marginStart="8dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="❤️"
                android:textSize="18sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvVidas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#E91E63"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIDAS"
                android:textSize="10sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="1dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Botones de acción mejorados -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="4dp"
        android:paddingBottom="10dp">

        <Button
            android:id="@+id/btnReiniciar"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="🔄 REINICIAR"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="14sp"
            android:backgroundTint="#1F3B75"
            android:layout_marginEnd="2dp"
            android:elevation="6dp"
            android:stateListAnimator="@null" />

        <Button
            android:id="@+id/btnMenu"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="🏠 MENÚ"
            android:textColor="#1F3B75"
            android:textStyle="bold"
            android:textSize="14sp"
            android:backgroundTint="@android:color/white"
            android:layout_marginStart="12dp"
            android:elevation="6dp"
            android:stateListAnimator="@null" />
    </LinearLayout>

    <!-- Contenedor del juego -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none"
        android:paddingTop="-20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="-60dp">

            <!-- Grid de cartas optimizado -->
            <GridLayout
                android:id="@+id/gridMemorama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="4"
                android:rowCount="4"
                android:layout_gravity="center"
                android:padding="12dp"
                android:background="#33FFFFFF"
                android:elevation="2dp">

                <!-- Fila 1 -->
                <ImageButton
                    android:id="@+id/carta1"
                    android:layout_width="0dp"
                    android:layout_height="85dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    android:scaleType="centerCrop"
                    android:background="@android:color/white"
                    android:src="@drawable/logo"
                    android:elevation="4dp"
                    android:stateListAnimator="@null"
                    android:contentDescription="Carta 1" />

