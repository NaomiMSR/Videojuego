<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/fondobusca">

    <!-- Botón de regresar al menú -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="start">

        <Button
            android:id="@+id/btn_back_to_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="← Menú"
            android:textColor="#FFFFFFFF"
            android:textSize="14sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:backgroundTint="#7C63D5"
            android:drawablePadding="8dp" />

    </LinearLayout>

    <!-- Header con información del juego -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#FEC5BB"
            android:padding="12dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minas"
                android:textColor="#FFFFFFFF"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_mines_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="#FFFF0000"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_new_game"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🙂"
            android:textSize="12sp"
            android:textColor="#FFFFFFFF"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#7C63D5"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#FEC5BB"
            android:padding="12dp"
            android:layout_marginStart="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiempo"
                android:textColor="#FFFFFFFF"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000"
                android:textColor="#FF00FF00"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <!-- Controles de dificultad -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_easy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fácil"
            android:textColor="#FFFFFFFF"
            android:layout_marginEnd="4dp"
            android:textSize="12sp"
            android:backgroundTint="#A2B2FF"/>

        <Button
            android:id="@+id/btn_medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Medio"
            android:textColor="#FFFFFFFF"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:textSize="12sp"
            android:backgroundTint="#A2B2FF"/>

        <Button
            android:id="@+id/btn_hard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Difícil"
            android:textColor="#FFFFFFFF"
            android:layout_marginStart="4dp"
            android:textSize="12sp"
            android:backgroundTint="#A2B2FF"/>

    </LinearLayout>

    <!-- Área del juego -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <GridLayout
                android:id="@+id/grid_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#FF34495E"
                android:padding="4dp" />

        </HorizontalScrollView>

    </ScrollView>

    <!-- Estado del juego -->
    <TextView
        android:id="@+id/tv_game_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¡Listo para jugar!"
        android:textColor="#FFFFFFFF"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:padding="12dp" />

</LinearLayout>