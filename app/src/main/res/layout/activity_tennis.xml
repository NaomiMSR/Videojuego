<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Fondo TSITP-->
    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/volley"
        android:alpha="0.7" />

    <!-- Panel superior con información - MÁS ABAJO PARA EVITAR CÁMARA -->
    <LinearLayout
        android:id="@+id/top_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginTop="60dp"
        android:background="#80000000">

        <!-- Puntaje -->
        <TextView
            android:id="@+id/scoreText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Score: 0"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4" />

        <!-- Botón de menú -->
        <Button
            android:id="@+id/menu_button"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="Menú"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:background="#FF6666"
            android:layout_marginHorizontal="8dp" />

        <!-- Vidas -->
        <TextView
            android:id="@+id/livesText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Vidas: 4"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:gravity="end"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4" />

    </LinearLayout>

    <!-- Paleta enemiga -->
    <View
        android:id="@+id/ai_paddle"
        android:layout_width="95dp"
        android:layout_height="20dp"
        android:layout_below="@id/top_panel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/paleta2"
        android:elevation="4dp" />

    <!-- Línea central decorativa -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_centerVertical="true"
        android:background="#FFFFFF"
        android:alpha="0.3" />

    <!-- Pelota -->
    <View
        android:id="@+id/ball"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:background="@drawable/pelota"
        android:elevation="6dp" />

    <!-- Paleta del usuario -->
    <View
        android:id="@+id/player_paddle"
        android:layout_width="95dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:background="@drawable/paleta1"
        android:elevation="4dp" />

    <!-- Mensaje de Game Over - SOLO APARECE CUANDO PIERDES -->
    <LinearLayout
        android:id="@+id/game_over_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/game_over_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡JUEGO TERMINADO!"
            android:textSize="28sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:shadowColor="#000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="6"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/game_over_button"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="REINICIAR JUEGO"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:background="#4CAF50"
            android:elevation="8dp" />

    </LinearLayout>

</RelativeLayout>